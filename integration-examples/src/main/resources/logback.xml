<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property file="/etc/integration/app.properties"/>
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache.camel">
        <level value="${log.camel.level:-INFO}"/>
    </logger>
    <logger name="org.springframework">
        <level value="${log.spring.level:-TRACE}"/>
    </logger>
    <logger name="org.milyn">
        <level value="${log.smooks.level:-INFO}"/>
    </logger>
    <logger name="org.fuwt">
        <level value="${log.fuwt.level:-TRACE}"/>
    </logger>
    <root>
        <level value="${log.root.level:-INFO}"/>
        <appender-ref ref="ConsoleAppender"/>
    </root>
</configuration>
